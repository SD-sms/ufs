#%Module

proc ModulesHelp { } {
   put stderr "This module loads python environement for running SRW on"
   put stderr "the NOAA RDHPC machine Jet"
}

module-whatis "Loads libraries needed for running SRW on Jet"

module load rocoto

module use -a /contrib/miniconda3/modulefiles
module load miniconda3

if { [module-info mode load] } {
  puts "conda activate regional_workflow;"
}

if {[module-info mode remove]} {
  puts "conda deactivate;"
}
